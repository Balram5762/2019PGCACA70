#include<iostream>
using namespace std;
int main()
{
    int t,m,i=0;
    cin>>t>>m;
    char number[t+1];
    cin>>number;


    while(m&&i<t)
    {
        if(i==0&&number[i]!='1')
           {number[i]='1';
            m--;
           }
         else if(number[i]!='0')
          { number[i]='0';
            m--;
          }
          i++;


    }

    for(i=0;i<t;i++)
    cout<<number[i];
    return 0;

}

